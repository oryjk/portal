<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aboutus.dao.AboutusMapper">
    <resultMap id="aboutusMap" type="com.aboutus.bean.Aboutus">
        <id property="aboutus_id" column="id"/>
        <result property="title" column="title"/>
        <result property="article" column="article"/>
        <result property="date" column="date"/>
        <result property="banner_id" column="banner_id"/>
        <result property="type" column="type"/>
        <result property="state" column="state"/>
    </resultMap>

    <!--增-->
    <insert id="insertAboutus" parameterType="com.aboutus.bean.Aboutus">
        INSERT INTO aboutus (title,article,date,banner_id,type,state) VALUES(#{title},#{article},now(),
        #{banner_id},#{type},#{state})
    </insert>
    <!--删-->
    <delete id="deleteAboutus" parameterType="int">
        UPDATE  aboutus SET state=0  WHERE id=#{aboutus_id}
    </delete>
    <!--改-->
    <update id="updateAboutus" parameterType="com.aboutus.bean.Aboutus">
        UPDATE aboutus SET title=#{title},article=#{article},banner_id=#{banner_id},type=#{type},
        state=#{state} WHERE id=#{aboutus_id}
    </update>
    <!--查实际所有-->
    <select id="selectTrueAllAboutus"  resultMap="aboutusMap">
        SELECT id,title,article,date,banner_id,type,state from aboutus
    </select>
    <!--查所有-->
    <select id="selectAllAboutus" parameterType="int" resultMap="aboutusMap">
        SELECT id,title,article,date,banner_id,type,state from aboutus WHERE state=#{state}
    </select>
